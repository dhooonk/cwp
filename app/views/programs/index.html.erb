<p id="notice"><%= notice %></p>

<h1>programs</h1>

<table class="table">
  <thead>
    <tr>
      <th>프로그램 명</th>
      <th>시작날짜</th>
      <th>종강날짜</th>
      <th>진행요일</th>
      <th>진행시간</th>
      <th>보기</th>
      <th>수정</th>
      <th>삭제</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.name %></td>
        <td><%= program.startDay %></td>
        <td><%= program.endDay %></td>
        <td><%= program.doingDay %></td>
        <td><%= program.doingTime %></td>
        <td><%= link_to '명단/출석', program %></td>
        <td><%= link_to '수정', edit_program_path(program) %></td>
        <td><%= link_to '삭제', program, method: :delete, data: { confirm: '정말로 프로그램을 삭제하시겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

