
<h1>프로그램 수정</h1>
<form action="/programs/<%=@program.id%>" method="patch" data-remote="true">
  <input type="text" name="programName" placeholder="프로그램 명">
  <input type="text" name="programStartDay" placeholder="시작날짜">
  <input type="text" name="programEndDay" placeholder="종강날짜">
  <input type="text" name="programDoingDay" placeholder="진행요일">
  <input type="text" name="programDoingTime" placeholder="진행시간">
  <input type="submit" name="commit">
</form>

<%= link_to 'Show', @program %> |
<%= link_to 'Back', programs_path %>
