<div class="container">
<h4><i class="fas fa-angle-right"></i> 회원정보</h4>
<hr id="hr">
  <table class="table">
    <tbody>
      <tr>
        <th scope="row">회원번호</th>
        <td><%= @custom.id %></td>
      </tr>
      <tr>
        <th scope="row">이름</th>
        <td><%= @custom.custom_name %></td>
      </tr>
      <tr>
        <th scope="row">연락처</th>
        <td><%= @custom.phone %><td>
      </tr>
      <tr>
        <th scope="row">비고</th>
        <td><%= @custom.etc %></td>
      </tr>
    </tbody>
  </table>

    <h4><i class="fas fa-angle-right"></i> 등록한 프로그램</h4>
    <hr id="hr">

  <div class="container">
    <div class="layout">
      <% @list.each do |each_program| %>
      <% Program.where(:id => each_program.program_id).each do |program| %>
      <div class="card">
        <img class="card-img-top" id="temp" src="\assets\facerecognition.PNG" alt="Card image cap">
        <div class="card-block ">
          <h4 class="card-title"><%= program.name %></h4>
          <p class="card-text">
            <%= program.startDay %>
            <%= program.endDay %>
            <%= program.doingDay %>
            <%= program.doingTime %>
          </p>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>

  <%= link_to '수정', edit_customer_path(@custom), class:"btn btn-success" %>
  <%= link_to '뒤로', customer_path, class:"btn btn-success"  %>

</div>
