<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
</ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="assets/carousel1.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="assets/carousel2.jpg" alt="Second slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="main">
  <div class="row">
    <div class="col-sm-4 mainTable">
        <table class="table">
          <div class"mainHeader" style="text-align: center;"><h4>공지사항</h4></div>
          <div class="stit"></div>
          <tbody>
            <% @notices.each do |notice| %>
            <tr>
              <th scope="row"><%=notice.id%></th>
              <td><%=notice.title%></td>
              <td>관리자</td>
              <td><%=notice.created_at.strftime("%Y-%m-%d")%></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>

    <div class="col-sm-4 mainTable">
      <div class"mainHeader" style="text-align: center;"><h4>오늘의 프로그램</h4></div>
      <div class="stit" ></div>
      <div class="programSlide">
        <% @programs.each do |program| %>
        <div class="card">
          <% if program.name=="요가" %>
            <img class="card-img-top" src="\assets/yoga.jpg" alt="Card image cap">
          <% elsif program.name=="바둑" %>
            <img class="card-img-top" src="\assets/go.PNG" alt="Card image cap">
          <% elsif program.name=="명상" %>
            <img class="card-img-top" src="\assets/meditation.PNG" alt="Card image cap">
          <% elsif program.name=="점심밥" %>
            <img class="card-img-top" src="\assets/dining.PNG" alt="Card image cap">
          <% elsif program.name=="프로그래밍" %>
            <img class="card-img-top" src="\assets/programming.PNG" alt="Card image cap">
          <% else %>
            <img class="card-img-top" src="\" alt="Card image cap">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%=program.name%></h5>
            <p class="card-text">
            <strong>진행요일</strong> : <%=program.doingDay%><br />
            <strong>진행시간</strong> : <%=program.doingTime%>
            </p>
          </div>
        </div>
        <% end %>
      </div>

      <script>
      $(document).ready(function(){
      $('.programSlide').slick({
        vertical: true,
        autoplay: true,
        arrows: false,
        });
      });
      </script>
          <!-- <h4>오늘의 프로그램</h4>
          <% @programs.each do |program| %>
          <div class="slide">
            <ul>
            <li><%=program.name%></li>
            </ul>
          </div>
          <% end %> -->
    </div>

    <div class="col-sm-3">
        <div class="row">

              <div class="col-sm-6 mainbutton">
                <div class="mainButton1"><i class="far fa-id-badge fa-3x"></i><br /> 출석체크</button>
                </div>
              </div>
              <div class="col-sm-6 mainbutton">
                <div class="mainButton2"><i class="far fa-building fa-3x"></i><br /> 센터이용</button>
                </div>
              </div>
              <div class="col-sm-6 mainbutton">
                <div class="mainButton2"><i class="fas fa-chalkboard-teacher fa-3x"></i><br /> <%=Time.now.month%>월 프로그램</button>
                </div>
              </div>
              <div class="col-sm-6 mainbutton">
                <div class="mainButton1"><i class="fas fa-home fa-3x"></i><br /> 중림사회복지관</button>
                </div>
              </div>
        </div>
      </div>
    </div>
  </div>
