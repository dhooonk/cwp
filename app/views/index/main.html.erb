<div class="container" id="main">
  <div class="row">
    <div class="col-sm-4">
      <table class="table">
        <h4>공지사항</h4>
        <tbody>
          <% @notices.each do |notice| %>
          <tr>
            <th scope="row"><%=notice.id%></th>
            <td><%=notice.title%></td>
            <td>관리자</td>
            <td><%=notice.created_at.strftime("%Y-%m-%d")%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-4">
      <h4>오늘의 프로그램</h4>
      <div class="programSlide">
        <% @programs.each do |program| %>
        <div class="card">
          <% if program.name=="요가" %>
            <img class="card-img-top" src="\assets/yoga.jpg" alt="Card image cap">
          <% elsif program.name=="바둑" %>
            <img class="card-img-top" src="\assets/go.PNG" alt="Card image cap">
          <% elsif program.name=="명상" %>
            <img class="card-img-top" src="\assets/meditation.PNG" alt="Card image cap">
          <% elsif program.name=="점심밥" %>
            <img class="card-img-top" src="\assets/dining.PNG" alt="Card image cap">
          <% elsif program.name=="프로그래밍" %>
            <img class="card-img-top" src="\assets/programming.PNG" alt="Card image cap">
          <% else %>
            <img class="card-img-top" src="\" alt="Card image cap">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%=program.name%></h5>
            <p class="card-text">
            <strong>진행요일</strong> : <%=program.doingDay%><br />
            <strong>진행시간</strong> : <%=program.doingTime%>
            </p>
          </div>
        </div>
        <% end %>
      </div>

      <script>
      $(document).ready(function(){
      $('.programSlide').slick({
        vertical: true,
        autoplay: true,
        arrows: false,
        });
      });
      </script>
